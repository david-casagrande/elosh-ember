<div id="books">
  {{#if model.titleNotes}}
    <h1 class="book-title">{{model.title}} <span>- {{model.titleNotes}}</span></h1>
  {{else}}
    <h1 class="book-title">{{model.title}}</h1>
  {{/if}}

  <div class="book-images clear-fix">
    <div class="book-banner-image">
      <img {{bind-attr src="model.bannerImage.url"}}/>
    </div>
    <div class="book-cover-image large-5-columns">
      <img {{bind-attr src="model.coverImage.url"}}/>
    </div>
  </div>

  <div id="book-narrative-and-pages" class="clear-fix">
    <div class="book-narrative">
      <div class="padding">
        {{{model.narrative}}}
      </div>
    </div>

    <div class="book-pages">
      <div class="padding">
        {{partial 'partials/book-thumbnails'}}
      </div>
    </div>

  </div>
</div>
